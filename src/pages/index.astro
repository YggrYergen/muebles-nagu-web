---
import Layout from '../layouts/Layout.astro';
import Header from '../components/layout/Header.astro';
import Hero from '../components/landing/Hero.astro';
import PhilosophySection from '../components/landing/PhilosophySection.astro';
import Services from '../components/landing/Services.astro';
import CollectionsGrid from '../components/landing/CollectionsGrid.astro';
import WhyChooseUs from '../components/landing/WhyChooseUs.astro';
import MaterialsCarousel from '../components/landing/MaterialsCarousel';
import ProcessTimeline from '../components/landing/ProcessTimeline.astro';
import SocialProof from '../components/landing/SocialProof.astro';
import Footer from '../components/layout/Footer.astro';
---

<Layout 
	title="Muebles NAGU | Mobiliario a Medida"
	description="Fabricación de muebles a medida con compromiso real y durabilidad extrema en melamina y línea rústica."
>
	<Header />
	
	<main>
		<Hero />
		
		<section id="nosotros">
			<PhilosophySection />
		</section>

		<Services />

		<CollectionsGrid />
		
		<WhyChooseUs />

		{/* Hiding sections not mentioned in new text to strictly follow client request */}
		{/* 
		<section id="materiales-trigger">
			<MaterialsCarousel client:visible />
		</section>

		<ProcessTimeline />
		*/}
		
		<SocialProof />
	</main>
	
	<Footer />
</Layout>

<style is:global>
	/* Transition between sections sutility */
	section {
		position: relative;
	}
</style>
